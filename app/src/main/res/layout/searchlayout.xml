<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchbg12"
    android:id="@+id/searchlayout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameofmedicine"
        android:hint="您想查询的药品名字/品牌/功效"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/s2"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medicine"
        android:layout_below="@+id/nameofmedicine"
        android:layout_above="@+id/footbar_layout_ly"
        android:layout_alignEnd="@+id/button2">

    </ListView>
    <LinearLayout
        android:id="@+id/footbar_layout_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/home_footbar_layout"></include>"
    </LinearLayout>
</RelativeLayout>